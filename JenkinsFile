pipeline {

    agent any
    tools {
        maven 'maven3' 
    }
    stages {
        stage('Compile stage') {
            steps {
                bat "mvn clean compile" 
        }
    }

         stage('testing stage') {
             steps {
                bat "mvn test"
        }
    }

          stage('deployment stage') {
              steps {
                bat "mvn deploy"
                deploy adapters: [tomcat8(path: '', url: 'http://localhost:9090')], contextPath: '/CarProducts', war: 'CarProdcuts'
        }
    }

  }

}

