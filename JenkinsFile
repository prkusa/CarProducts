pipeline {

    agent any
    tools {
        maven 'maven3' 
    }
    stages {
        stage('Compile stage') {
            steps {
                bat "mvn clean compile" 
        }
    }

         stage('testing stage') {
             steps {
                bat "mvn test"
        }
    }

          stage('deployment stage') {
              steps {
                bat "mvn deploy"
                deploy adapters: [tomcat8(credentialsId: 'd41c2f01-11ff-4603-a521-50819405a608', path: '', url: 'http://localhost:9090')], contextPath: '/', war: ' "**/*.war"'
        }
    }

  }

}

